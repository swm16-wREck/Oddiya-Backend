# Example Terraform variables file
# Copy this file to terraform.tfvars and customize for your deployment

# Core Configuration
aws_region   = "ap-northeast-2"  # Seoul region
environment  = "dev"              # dev, staging, or prod
project_name = "my-project"
cost_center  = "engineering"

# Cost Optimization Settings
use_spot_instances      = true   # Use spot instances for 70-90% savings
use_graviton            = true   # Use ARM instances for 20% savings
use_burstable_instances = true   # Use t4g/t3 instances for variable workloads
enable_auto_stop        = true   # Auto stop/start non-prod resources

# Instance Types (cheapest first)
instance_types = {
  micro  = ["t4g.micro", "t3.micro", "t3a.micro"]
  small  = ["t4g.small", "t3.small", "t3a.small"]
  medium = ["t4g.medium", "t3.medium", "t3a.medium"]
  large  = ["t4g.large", "t3.large", "t3a.large"]
  xlarge = ["t4g.xlarge", "t3.xlarge", "t3a.xlarge"]
}

# Storage Optimization
ebs_optimization = {
  use_gp3                 = true
  enable_encryption       = true
  snapshot_retention_days = 7
}

s3_lifecycle_rules = {
  enable_intelligent_tiering = true
  transition_to_ia_days      = 30
  transition_to_glacier_days = 90
  expire_days                = 365
}

# Database Configuration
rds_optimization = {
  use_aurora_serverless = true
  use_graviton          = true
  enable_auto_pause     = true
  backup_retention_days = 7
}

# Networking
use_single_nat_gateway = true  # Save $90+/month per gateway
enable_vpc_endpoints   = true  # Reduce data transfer costs

# Auto-scaling
auto_scaling = {
  min_size               = 1
  max_size               = 10
  desired_capacity       = 2
  target_cpu_utilization = 70
  scale_in_cooldown      = 300
  scale_out_cooldown     = 60
  predictive_scaling     = true
}

# Scheduling (for non-production)
schedule = {
  start_cron = "0 8 * * MON-FRI"  # 8 AM weekdays
  stop_cron  = "0 20 * * *"       # 8 PM daily
  timezone   = "Asia/Seoul"
}

# Budget Alerts
budget_alert = {
  monthly_limit_usd = 500
  alert_thresholds  = [50, 80, 100, 120]
  alert_emails      = ["your-email@example.com"]
}